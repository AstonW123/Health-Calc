        <div>
          <label for="water-climate">Climate/activity</label>
          <select id="water-climate">
            <option value="0">Normal</option>
            <option value="0.5">Hot day or training</option>
            <option value="1">Very hot + intense training</option>
          </select>
        </div>
      </div>

      <div style="margin-top:12px; display:flex; gap:8px;">
        <button class="btn" id="water-calc">Calculate intake</button>
