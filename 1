  <footer>
    © <span id="year"></span> Health & Fitness Calculators • Simple, useful, free
  </footer>

  <script>
    // Tab switching
    const tabs = document.querySelectorAll('.tab');
    const tabBtns = document.querySelectorAll('.tab-btn');
    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        const target = btn.getAttribute('data-tab');
        tabs.forEach(t => {
          t.style.display = (t.id === target) ? '' : 'none';
        });
      });
    });

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Helpers
    function fmt(n, digits = 2) {
      const num = Number(n);
      if (!isFinite(num)) return '—';
      return Number(num.toFixed(digits)).toLocaleString();
    }
    function badge(category) {
      if (category === 'Normal') return '<span class="badge ok">Normal</span>';
      if (category === 'Underweight' || category === 'Overweight') return '<span class="badge warn">' + category + '</span>';
      if (category === 'Obese') return '<span class="badge bad">Obese</span>';
      return '';
    }

    // BMI Calculator
    const bmiWeight = document.getElementById('bmi-weight');
    const bmiHeight = document.getElementById('bmi-height');
    const bmiResult = document.getElementById('bmi-result');
    document.getElementById('bmi-calc').addEventListener('click', () => {
      const w = parseFloat(bmiWeight.value);
      const hcm = parseFloat(bmiHeight.value);
      if (!(w > 0) || !(hcm > 0)) {
        bmiResult.innerHTML = 'Please enter valid weight and height.';
        return;
      }
      const hm = hcm / 100;
      const bmi = w / (hm * hm);
      let cat = '';
      if (bmi < 18.5) cat = 'Underweight';
      else if (bmi < 25) cat = 'Normal';
      else if (bmi < 30) cat = 'Overweight';
      else cat = 'Obese';

      bmiResult.innerHTML = `Your BMI is <strong>${fmt(bmi)}</strong> ${badge(cat)}<br>
        Category: <strong>${cat}</strong>`;
    });
    document.getElementById('bmi-reset').addEventListener('click', () => {
      bmiWeight.value = ''; bmiHeight.value = '';
      bmiResult.textContent = 'Enter your weight and height to see your BMI.';
    });

    // Daily Calories (Mifflin–St Jeor)
    const calSex = document.getElementById('cal-sex');
    const calAge = document.getElementById('cal-age');
    const calHeight = document.getElementById('cal-height');
    const calWeight = document.getElementById('cal-weight');
    const calActivity = document.getElementById('cal-activity');
    const calResult = document.getElementById('cal-result');

    function mifflinStJeorBMR(sex, kg, cm, age) {
      // BMR (male) = 10*kg + 6.25*cm - 5*age + 5
      // BMR (female) = 10*kg + 6.25*cm - 5*age - 161
      const base = 10 * kg + 6.25 * cm - 5 * age;
      return sex === 'male' ? base + 5 : base - 161;
    }

    document.getElementById('cal-calc').addEventListener('click', () => {
      const sex = calSex.value;
      const age = parseFloat(calAge.value);
      const cm = parseFloat(calHeight.value);
      const kg = parseFloat(calWeight.value);
      const mult = parseFloat(calActivity.value);
      if (!(age > 0) || !(cm > 0) || !(kg > 0)) {
        calResult.innerHTML = 'Please enter valid age, height, and weight.';
        return;
      }
      const bmr = mifflinStJeorBMR(sex, kg, cm, age);
      const tdee = bmr * mult;

      // Example goals ±20%
      const lose = tdee * 0.8;
      const gain = tdee * 1.2;

      calResult.innerHTML = `
        <strong>BMR:</strong> ${fmt(bmr, 0)} kcal/day<br>
        <strong>TDEE (maintenance):</strong> ${fmt(tdee, 0)} kcal/day<br>
        <strong>Weight loss (approx):</strong> ${fmt(lose, 0)} kcal/day<br>
        <strong>Weight gain (approx):</strong> ${fmt(gain, 0)} kcal/day
      `;
    });

    document.getElementById('cal-reset').addEventListener('click', () => {
      calAge.value = ''; calHeight.value = ''; calWeight.value = ''; calActivity.value = '1.2'; calSex.value = 'male';
      calResult.textContent = 'Fill in your details to estimate daily calorie needs.';
    });

    // Water Intake
    const waterWeight = document.getElementById('water-weight');
    const waterClimate = document.getElementById('water-climate');
    const waterResult = document.getElementById('water-result');

    document.getElementById('water-calc').addEventListener('click', () => {
      const kg = parseFloat(waterWeight.value);
      const adj = parseFloat(waterClimate.value);
      if (!(kg > 0)) {
        waterResult.innerHTML = 'Please enter a valid weight.';
        return;
      }
      const baseline = kg * 0.033; // L/day
      const total = baseline + adj;
      waterResult.innerHTML = `
        <strong>Baseline:</strong> ${fmt(baseline)} L/day<br>
        <strong>Adjustment:</strong> ${fmt(adj)} L/day<br>
        <strong>Total recommendation:</strong> ${fmt(total)} L/day
      `;
    });

    document.getElementById('water-reset').addEventListener('click', () => {
      waterWeight.value = ''; waterClimate.value = '0';
      waterResult.textContent = 'Enter your weight to estimate daily water intake.';
    });

    // Age Calculator
    const ageDob = document.getElementById('age-dob');
    const ageRef = document.getElementById('age-ref');
    const ageResult = document.getElementById('age-result');

    function diffYMD(from, to) {
      // Returns {years, months, days}
      let years = to.getFullYear() - from.getFullYear();
      let months = to.getMonth() - from.getMonth();
      let days = to.getDate() - from.getDate();

      if (days < 0) {
        const prevMonth = new Date(to.getFullYear(), to.getMonth(), 0); // last day of previous month
        days += prevMonth.getDate();
        months -= 1;
      }
      if (months < 0) {
        months += 12;
        years -= 1;
      }
      return { years, months, days };
    }

    function nextBirthday(dob, ref) {
      let next = new Date(ref.getFullYear(), dob.getMonth(), dob.getDate());
      if (next < ref) {
        next = new Date(ref.getFullYear() + 1, dob.getMonth(), dob.getDate());
      }
      const ms = next - ref;
      const days = Math.ceil(ms / (1000 * 60 * 60 * 24));
      return { date: next, days };
    }

    document.getElementById('age-calc').addEventListener('click', () => {
      const dobStr = ageDob.value;
      if (!dobStr) {
        ageResult.textContent = 'Please select your date of birth.';
        return;
      }
      const refStr = ageRef.value;
      const dob = new Date(dobStr + 'T00:00:00');
      const ref = refStr ? new Date(refStr + 'T00:00:00') : new Date();

      if (dob > ref) {
        ageResult.textContent = 'Birth date cannot be in the future.';
        return;
      }

      const { years, months, days } = diffYMD(dob, ref);
      const nb = nextBirthday(dob, ref);

      ageResult.innerHTML = `
        <strong>Exact age:</strong> ${years} years, ${months} months, ${days} days<br>
        <strong>Next birthday:</strong> ${nb.date.toLocaleDateString()} (${nb.days} days to go)
      `;
    });

    document.getElementById('age-reset').addEventListener('click', () => {
      ageDob.value = ''; ageRef.value = '';
      ageResult.textContent = 'Select your birth date to compute your age.';
    });
  </script>
</body>
</html>
