      <button class="tab-btn" data-tab="water">Water Intake</button>
      <button class="tab-btn" data-tab="age">Age Calculator</button>
    </div>

    <!-- BMI -->
    <section class="card tab" id="bmi">
      <h2>BMI calculator</h2>
      <p class="muted">Body Mass Index using metric inputs.</p>

      <div class="grid grid-2">
        <div>
          <label for="bmi-weight">Weight (kg)</label>
          <input type="number" id="bmi-weight" placeholder="e.g., 70" min="0" step="0.1" />
        </div>
        <div>
          <label for="bmi-height">Height (cm)</label>
          <input type="number" id="bmi-height" placeholder="e.g., 175" min="0" step="0.1" />
        </div>
      </div>

      <div style="margin-top:12px; display:flex; gap:8px;">
        <button class="btn" id="bmi-calc">Calculate BMI</button>
        <button class="btn secondary" id="bmi-reset">Reset</button>
      </div>

      <div class="result" id="bmi-result">Enter your weight and height to see your BMI.</div>
      <p class="small">Formula: BMI = weight (kg) ÷ [height (m)]²</p>
    </section>

    <!-- Daily Calories -->
    <section class="card tab" id="calories" style="display:none;">
      <h2>Daily calories calculator</h2>
      <p class="muted">Mifflin–St Jeor BMR + activity multiplier.</p>

      <div class="grid grid-3">
        <div>
          <label for="cal-sex">Sex</label>
          <select id="cal-sex">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div>
          <label for="cal-age">Age (years)</label>
          <input type="number" id="cal-age" placeholder="e.g., 30" min="0" />
        </div>
        <div>
          <label for="cal-height">Height (cm)</label>
          <input type="number" id="cal-height" placeholder="e.g., 175" min="0" step="0.1" />
        </div>
        <div>
          <label for="cal-weight">Weight (kg)</label>
          <input type="number" id="cal-weight" placeholder="e.g., 70" min="0" step="0.1" />
        </div>
        <div>
          <label for="cal-activity">Activity level</label>
          <select id="cal-activity">
            <option value="1.2">Sedentary (little/no exercise)</option>
            <option value="1.375">Light (1–3 days/week)</option>
            <option value="1.55">Moderate (3–5 days/week)</option>
            <option value="1.725">Active (6–7 days/week)</option>
            <option value="1.9">Very active (physical job + training)</option>
          </select>
        </div>
      </div>

      <div style="margin-top:12px; display:flex; gap:8px;">
        <button class="btn" id="cal-calc">Calculate calories</button>
        <button class="btn secondary" id="cal-reset">Reset</button>
      </div>

      <div class="result" id="cal-result">Fill in your details to estimate daily calorie needs.</div>
      <p class="small">BMR (male) = 10·kg + 6.25·cm − 5·age + 5; BMR (female) = 10·kg + 6.25·cm − 5·age − 161. TDEE = BMR × activity.</p>
    </section>

    <!-- Water Intake -->
